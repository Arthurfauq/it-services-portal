<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
    <display-name>it-services-portal</display-name>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.it_services_portal.controllers.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>com.it_services_portal.controllers.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern></url-pattern>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllIssuesController</servlet-name>
        <servlet-class>com.it_services_portal.controllers.AllIssuesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllIssuesController</servlet-name>
        <url-pattern>/staff/allIssues</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyIssuesController</servlet-name>
        <servlet-class>com.it_services_portal.controllers.MyIssuesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyIssuesController</servlet-name>
        <url-pattern>/myIssues</url-pattern>
        <url-pattern>/user/myIssues</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>KnowledgeBase</servlet-name>
        <servlet-class>com.it_services_portal.controllers.KnowledgeBase</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KnowledgeBase</servlet-name>
        <url-pattern>/knowledgeBase</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.it_services_portal.controllers.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>com.it_services_portal.controllers.Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FilesServlet</servlet-name>
        <servlet-class>com.it_services_portal.controllers.FilesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilesServlet</servlet-name>
        <url-pattern>/files/*</url-pattern>
    </servlet-mapping>
    <resource-env-ref>
        <resource-env-ref-name>it-portal-db</resource-env-ref-name>
        <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
    </resource-env-ref>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Unprotected Resources</web-resource-name>
            <url-pattern>/public/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Users must be logged in</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
            <role-name>staff</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>StaffPages</web-resource-name>
            <url-pattern>/staff/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>staff</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>UserPages</web-resource-name>
            <url-pattern>/user/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>Users</realm-name>
        <form-login-config>
            <form-login-page>/public/jsp/login.jsp</form-login-page>
            <form-error-page>/public/jsp/loginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <role-name>staff</role-name>
    </security-role>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <error-page>
        <error-code>404</error-code>
        <location>/public/jsp/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/public/jsp/error403.jsp</location>
    </error-page>
</web-app>
